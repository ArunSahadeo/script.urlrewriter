<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.urlrewriter" name="URL Rewriter Service" version="1.0.0" provider-name="Sahadeo">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.service" library="default.py" start="login"/>
    <extension point="xbmc.addon.metadata">
        <summary>Script to modify stream URLs for .strm files</summary>
        <description>Monitors playback and modifies URLs for specific .strm files</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
